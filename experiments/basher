## Set experiment name here
EXP_NAME=/scratch/pp2681/mom6/Feb2022/Conservative/bilap_001_cons_1_smooth

## Create an output directory on scratch
rm -rf $EXP_NAME
mkdir -p $EXP_NAME

cp mom.sub $EXP_NAME
cp -r configurations/double_gyre/* $EXP_NAME
cp ~/MOM6-examples/build/intel/ocean_only/repro/MOM6 $EXP_NAME

cd configurations/OVERRIDE
cat 20years bilap_001 R4 FGR2 AZ2017 ZB_smooth cons_1 > $EXP_NAME/MOM_override

cd $EXP_NAME
sbatch mom.sub
